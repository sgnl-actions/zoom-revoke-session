{
  "name": "@sgnl/job-template",
  "version": "1.0.0",
  "description": "Template for SGNL JavaScript jobs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "validate": "node scripts/validate-metadata.js",
    "dev": "node scripts/dev-runner.js"
  },
  "keywords": ["sgnl", "job", "template", "identity", "security"],
  "author": "SGNL Engineering",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "rollup": "^4.28.1",
    "jest": "^29.7.0",
    "eslint": "^9.17.0",
    "js-yaml": "^4.1.0"
  }
}